<Window x:Class="SudokuWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuWPF"
        mc:Ignorable="d"
        Title="Sudoku Solver" Height="100" Width="250" MinHeight="100" MinWidth="250" FontFamily="Mongolian Baiti">
    <Grid>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="100" Click="RecognizePhoto_Click" Height="25" FontSize="14"/>
        <Button Content="Find game field" Margin="133,34,0,0" VerticalAlignment="Top" Click="GetField_Click" HorizontalAlignment="Left" Width="100" Height="25" FontSize="14"/>
        <Menu Height="20" VerticalAlignment="Top" Margin="0,0,-0.4,0">

            <MenuItem Header="File">
                <MenuItem Header="New"></MenuItem>
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="SaveAs..."></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings" Click="SettingsMenu_Click"/>
        </Menu>
    </Grid>
</Window>
